{
  "name": "package-analyzer",
  "private": "true",
  "repository": "git@github.com:Hermanya/package-analyzer.git",
  "version": "0.1.8",
  "description": "Package analyzer ðŸ”Ž ðŸ“¦",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-debugger": "error",
      "no-process-env": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Injectable",
            "Inject"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": true,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ]
    }
  },
  "author": "Hermanya <herman@starikov.dev>",
  "scripts": {
    "test": "jest",
    "lint": "eslint packages/*/src --ext .js,.ts"
  },
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/node": "13.13.30",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.7.0",
    "auto-changelog": "2.2.1",
    "esbuild": "0.8.5",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-mock-process": "1.4.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "prettier-eslint": "11.0.0",
    "prettier-eslint-cli": "5.0.0",
    "pretty-quick": "3.1.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.0.0",
    "tslib": "2.0.3",
    "typescript": "4.0.5"
  }
}
